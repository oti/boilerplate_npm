{
  "private": true,
  "name": "boilerplate_npm",
  "version": "3.0.1",
  "description": "web development env boilerplate with npm run-script",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm-run-all -p watch serve",
    "clean": "rimraf dist",
    "serve": "browser-sync start --server dist --files dist --startPath '' --port 3000",
    "copy:favicon": "cpx src/favicon.ico dist",
    "copy:what-input": "cpx node_modules/what-input/dist/what-input.min.js dist/script/",
    "ejs": "ejs-cli -b src/html/pages/ -f **/*.ejs -o dist -O src/json/data.json",
    "pug": "pug src/html/pages/ -o dist -O src/json/data.json -P",
    "sass": "node-sass src/style/style.scss dist/style/tmp.css --indent-width 2",
    "autoprefixer": "postcss --use autoprefixer -r dist/style/tmp.css",
    "mqpacker": "mqpacker --sort dist/style/tmp.css",
    "csso": "csso dist/style/tmp.css --output dist/style/style.css",
    "postbuild:css": "rimraf dist/style/tmp.css",
    "webpack": "webpack",
    "imagemin": "imagemin src/image/**/* -o dist/image/",
    "build": "npm run clean && npm-run-all -p build:* && npm-run-all -p copy:*",
    "build:html": "npm run pug & npm run ejs",
    "build:css": "npm-run-all sass autoprefixer mqpacker csso postbuild:css",
    "build:js": "webpack",
    "build:image": "npm run imagemin",
    "prettier:fix": "prettier --write .",
    "lint:html": "markuplint dist/**/*.html --ruleset ./markuplintrc",
    "lint:css": "stylelint dist/style/*",
    "validate:html": "html-validator --file=dist/index.html --verbose",
    "test": "npm-run-all -p lint:* validate:html",
    "watch": "npm-run-all -p watch:*",
    "watch:json": "chokidar src/json/data.json -pc 'npm run build:html'",
    "watch:html": "chokidar src/html/ -pc 'npm run build:html'",
    "watch:css": "chokidar src/style/ -pc 'npm run build:css'",
    "watch:js": "chokidar src/script/ -pc 'webpack --mode development'",
    "watch:image": "chokidar src/image/ -i **/*.DS_Store -c 'npm run build:image'",
    "prepare": "husky install"
  },
  "dependencies": {
    "intersection-observer": "^0.12.0",
    "normalize.css": "^8.0.1",
    "regenerator-runtime": "^0.13.9",
    "what-input": "^5.2.10"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.19.2",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.2",
    "csso-cli": "^3.0.0",
    "ejs-cli": "^2.2.3",
    "html-validator-cli": "^7.0.1",
    "husky": "^7.0.4",
    "imagemin-cli": "^7.0.0",
    "markuplint": "^1.11.4",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended": "^6.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  }
}
