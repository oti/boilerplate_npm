{
  "name": "boilerplate_static-web-dev",
  "version": "1.0.1",
  "description": "",
  "author": "oti",
  "license": "MIT",
  "repository": "git@github.com:oti/boilerplate_static-web-dev.git",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm-run-all -p watch server",
    "sass": "node-sass src/style/style.scss htdocs/style/style.css --indent-width 2",
    "autoprefixer": "postcss --use autoprefixer -r htdocs/style/style.css",
    "mqpacker": "mqpacker --sort htdocs/style/style.css > htdocs/style/style.mqpack.css",
    "ejs": "ejs-cli --base-dir src/html/pages --file '**/**.ejs' --out htdocs/ --options site.json",
    "server": "browser-sync start --server 'htdocs/' --files 'htdocs/' --startPath '' --port '3000'",
    "clean": "rimraf htdocs/{image/*,style/*,script/*}",
    "copy:favicon": "cpx 'src/favicon.ico' 'htdocs/'",
    "copy:what-input": "cpx 'node_modules/what-input/dist/what-input.min.js' 'htdocs/script/'",
    "copy:slick_js": "cpx 'node_modules/slick-carousel/slick/slick.min.js' 'htdocs/script/'",
    "copy:slick_gif": "cpx 'node_modules/slick-carousel/slick/ajax-loader.gif' 'htdocs/style/'",
    "copy:slick_font": "cpx 'node_modules/slick-carousel/slick/fonts/*' 'htdocs/style/fonts/'",
    "copy:jquery": "cpx 'node_modules/jquery/dist/jquery.min.js' 'htdocs/script/'",
    "copy:font": "cpx 'src/font/*' 'htdocs/font/'",
    "build": "npm run clean & npm-run-all -p build:* & npm run ejs & npm-run-all -p copy:*",
    "build:sass": "npm-run-all sass autoprefixer",
    "build:js": "uglifyjs src/script/script.js --compress -o htdocs/script/script.js",
    "build:image": "imagemin src/image/* -o htdocs/image",
    "watch": "npm-run-all -p watch:*",
    "watch:sass": "chokidar 'src/style/' -pc 'npm run build:sass'",
    "watch:js": "chokidar 'src/script/' -pc 'npm run build:js'",
    "watch:ejs": "chokidar 'src/html/' -pc 'npm run ejs'",
    "watch:image": "chokidar 'src/image/' -i '**/*.DS_Store' -c 'npm run build:image'"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4",
    "iOS >= 7"
  ],
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^1.2.3",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.2",
    "ejs-cli": "^2.1.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.7.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "what-input": "^5.2.7"
  }
}
