{
  "name": "boilerplate_static-web-dev",
  "version": "2.0.0",
  "description": "",
  "author": "oti",
  "license": "MIT",
  "repository": "git@github.com:oti/boilerplate_static-web-dev.git",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm-run-all -p watch serve",
    "clean": "rimraf dist/{image/*,style/*,script/*}",
    "serve": "browser-sync start --server 'dist/' --files 'dist/' --startPath '' --port '3000'",
    "copy:favicon": "cpx 'src/favicon.ico' 'dist/'",
    "copy:what-input": "cpx 'node_modules/what-input/dist/what-input.min.js' 'dist/script/'",
    "ejs": "ejs-cli -b src/html/pages/ -f '**/**.ejs' -o 'dist/' -O 'src/json/data.json'",
    "sass": "node-sass src/style/style.scss > dist/style/.style.css",
    "autoprefixer": "postcss --use autoprefixer -r dist/style/.style.css",
    "mqpacker": "mqpacker --sort dist/style/.style.css > dist/style/style.css && rimraf htdocs/style/.style.css",
    "webpack": "webpack",
    "imagemin": "imagemin src/image/* -o dist/image",
    "build": "npm run clean & npm-run-all -p build:* & npm-run-all -p copy:*",
    "build:html": "npm run ejs",
    "build:css": "npm-run-all sass autoprefixer mqpacker",
    "build:js": "npm run webpack",
    "build:image": "npm run imagemin",
    "watch": "npm-run-all -p watch:*",
    "watch:json": "chokidar 'src/json/data.json' -pc 'npm run ejs'",
    "watch:html": "chokidar 'src/html/' -pc 'npm run ejs'",
    "watch:css": "chokidar 'src/style/' -pc 'npm run sass'",
    "watch:js": "chokidar 'src/script/' -pc 'npm run webpack -- --mode development'",
    "watch:image": "chokidar 'src/image/' -i '**/*.DS_Store' -c 'npm run imagemin'"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4",
    "iOS >= 7"
  ],
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "browser-sync": "^2.26.7",
    "chokidar-cli": "^1.2.3",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.2",
    "ejs-cli": "^2.1.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.7.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "what-input": "^5.2.7"
  }
}
