{
  "private": true,
  "name": "boilerplate_npm",
  "version": "3.4.0",
  "description": "web development env boilerplate with npm run-script",
  "license": "MIT",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm-run-all -p watch serve",
    "clean": "rimraf dist",
    "serve": "browser-sync start --server dist --files dist --startPath '' --port 3000",
    "copy:favicon": "cpx src/favicon.ico dist",
    "ejs": "ejs-cli -b src/html/pages/ -f '**/*.ejs' -o dist -O src/json/data.json",
    "pug": "pug src/html/pages/ -o dist -O src/json/data.json -P",
    "sass": "node-sass src/style/style.scss dist/asset/style/tmp.css --indent-width 2",
    "autoprefixer": "postcss --use autoprefixer -r dist/asset/style/tmp.css",
    "mqpacker": "mqpacker --sort dist/asset/style/tmp.css",
    "csso": "csso dist/asset/style/tmp.css --output dist/asset/style/style.css",
    "postbuild:css": "rimraf dist/asset/style/tmp.css",
    "webpack": "webpack",
    "imagemin": "imagemin 'src/image/**/*' -o dist/asset/image/",
    "build": "npm run clean && npm-run-all -p build:* && npm-run-all -p copy:*",
    "build:html": "npm run pug & npm run ejs",
    "build:css": "npm-run-all sass autoprefixer mqpacker csso postbuild:css",
    "build:js": "webpack",
    "build:image": "npm run imagemin",
    "pretty-quick": "pretty-quick",
    "lint:html": "markuplint 'dist/**/*.html' --ruleset ./markuplintrc",
    "lint:css": "stylelint 'dist/asset/style/*'",
    "test": "npm-run-all -p lint:*",
    "watch": "npm-run-all -p watch:*",
    "watch:json": "chokidar src/json/data.json -pc 'npm run build:html'",
    "watch:html": "chokidar src/html/ -pc 'npm run build:html'",
    "watch:css": "chokidar src/style/ -pc 'npm run build:css'",
    "watch:js": "chokidar src/script/ -pc 'webpack --mode development'",
    "watch:image": "chokidar src/image/ -i .DS_Store -c 'npm run build:image'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^2.4.1",
    "autoprefixer": "^10.4.14",
    "browser-sync": "^2.29.1",
    "chokidar-cli": "^3.0.0",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.2",
    "csso-cli": "^4.0.2",
    "ejs-cli": "^2.2.3",
    "husky": "^8.0.3",
    "imagemin-cli": "^7.0.0",
    "markuplint": "^3.4.0",
    "node-sass": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.1.0",
    "pretty-quick": "^3.1.3",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^4.4.1",
    "stylelint": "^15.3.0",
    "stylelint-config-recommended": "^11.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.2",
    "webpack": "^5.76.3",
    "webpack-cli": "^5.0.1"
  }
}
