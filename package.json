{
  "name": "boilerplate_static-web-dev",
  "version": "1.0.2",
  "description": "",
  "author": "oti",
  "license": "MIT",
  "repository": "git@github.com:oti/boilerplate_static-web-dev.git",
  "scripts": {
    "prestart": "npm run build",
    "start": "npm-run-all -p watch serve",
    "clean": "rimraf htdocs/{image/*,style/*,script/*}",
    "serve": "browser-sync start --server 'htdocs/' --files 'htdocs/' --startPath '' --port '3000'",
    "copy:favicon": "cpx 'src/favicon.ico' 'htdocs/'",
    "copy:what-input": "cpx 'node_modules/what-input/dist/what-input.min.js' 'htdocs/script/'",
    "copy:slick_js": "cpx 'node_modules/slick-carousel/slick/slick.min.js' 'htdocs/script/'",
    "copy:slick_gif": "cpx 'node_modules/slick-carousel/slick/ajax-loader.gif' 'htdocs/style/'",
    "copy:slick_font": "cpx 'node_modules/slick-carousel/slick/fonts/*' 'htdocs/style/fonts/'",
    "copy:jquery": "cpx 'node_modules/jquery/dist/jquery.min.js' 'htdocs/script/'",
    "copy:font": "cpx 'src/font/*' 'htdocs/font/'",
    "ejs": "ejs-cli -b src/html/pages/ -f '**/**.ejs' -o 'htdocs/' -O 'site.json'",
    "sass": "node-sass src/style/style.scss > htdocs/style/.style.css --indent-width 2",
    "autoprefixer": "postcss --use autoprefixer -r htdocs/style/.style.css",
    "mqpacker": "mqpacker --sort htdocs/style/.style.css > htdocs/style/style.css && rimraf htdocs/style/.style.css",
    "imagemin": "imagemin src/image/* -o htdocs/image",
    "build": "npm run clean & npm-run-all -p build:* & npm-run-all -p copy:*",
    "build:html": "npm run ejs",
    "build:css": "npm-run-all sass autoprefixer mqpacker",
    "build:js": "uglifyjs src/script/script.js --compress -o htdocs/script/script.js",
    "build:image": "npm run imagemin",
    "watch": "npm-run-all -p watch:*",
    "watch:json": "chokidar 'site.json' -pc 'npm run build:html'",
    "watch:html": "chokidar 'src/html/' -pc 'npm run build:html'",
    "watch:css": "chokidar 'src/style/' -pc 'npm run build:css'",
    "watch:js": "chokidar 'src/script/' -pc 'npm run build:js'",
    "watch:image": "chokidar 'src/image/' -i '**/*.DS_Store' -c 'npm run build:image'"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 10",
    "Android >= 4",
    "iOS >= 7"
  ],
  "devDependencies": {
    "autoprefixer": "^8.6.3",
    "browser-sync": "^2.24.4",
    "chokidar-cli": "^1.2.0",
    "cpx": "^1.5.0",
    "css-mqpacker": "^6.0.2",
    "ejs-cli": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.9.0",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.4.0"
  },
  "dependencies": {
    "easing-sass-function": "^1.1.0",
    "jquery": "^3.4.0",
    "slick-carousel": "^1.8.1",
    "smooth-gradient-sass-function": "^1.0.0",
    "what-input": "^5.1.0"
  }
}
